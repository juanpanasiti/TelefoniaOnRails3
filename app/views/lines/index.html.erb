<h1><i class="fas fa-sim-card"></i> Lineas</h1>
<% if current_admin.can_create? %>
  <%= link_to "Nueva Línea", new_line_path, remote: :true, class:"btn btn-success" %>
<% end %>

<% unless @lines.count == 0 %>
<table class="table table-stripped table-hover table-dark">
  <thead>
    <th>Nombre</th>
    <th>DNI</th>
    <th>Oficina</th>
    <th>Líneas</th>
    <th>Opciones</th>
  </thead>
  <tbody>
    <% @lines.each do |line| %>
    <tr>
      <td><%= line.get_fullname %></td>
      <td><%= line.get_dni_formatted %></td>
      <td><%= line.get_office_fullname %></td>
      <td><%= line.lines.count %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<div class="alert alert-warning" role="alert">
  <h4 class="alert-heading">No hay líneas cargados!</h4>
  <p>Un adminsitrador con permisos de acceso debería comenzar a agregarlas.</p>
  <span class="fa-stack fa-2x">
  <i class="fas fa-sim-card fa-stack-2x pull-left"></i>
  <i class="fas fa-plus fa-stack-1x" style="color:Lightgreen"></i>
</span>
</div>
<% end %>

<!-- Experimantal -->
<div class="" id="new-line">

</div>
