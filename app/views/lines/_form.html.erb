<div class="modal fade" id="new-line-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Formulario de Usuarios</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <%= form_with(model: line, url:url, method:method) do |line| %>

      <div class="modal-body">
        <div class="form-group">
          <%= line.label :number, "Número" %>
          <%= line.text_field :number, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= line.label :account_id, "Cuenta" %>
          <%= line.select :account_id, options_for_select(@account_options), {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= line.label :user_id, "Usuario" %>
          <%= line.select :user_id, options_for_select(@user_options), {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= line.label :plan_id, "Plan" %>
          <%= line.select :plan_id, options_for_select(@plan_options), {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= line.label :status, "Estado" %>
          <%= line.select :status, options_for_select(@status_options), {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= line.label :sim, "Formato SIM" %>
          <%= line.select :sim, options_for_select(@sim_options), {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= line.label :lastCheck, "Último check" %>
          <%= line.date_field :lastCheck, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= line.label :details, "Detalles y aclaraciones" %>
          <%= line.text_area :details, rows:5,class:"form-control" %>
        </div>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <%= line.submit "Guardar", class:"btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>
</div>
