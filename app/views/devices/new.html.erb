<h1>Nuevo equipo</h1>
<%= form_with(model: @device, local: true) do |dev| %>
  <% if @device.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@device.errors.count, "error") %> prohibited this entidad from being saved:</h2>

      <ul>
        <% @device.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    t.bigint "device_model_id", null: false
  </div>

  <div class="form-group">
    <%= dev.label :imei, "IMEI" %>
    <%= dev.text_field :imei,length:15,required:true, class:"form-control" %>
  </div>

  <div class="form-group">
    t.bigint "line_id", null: false
  </div>

  <div class="form-group">
    t.string "status"
  </div>
  <div class="form-group form-check">
    <%= dev.check_box(:isExternal) %>
    <%= dev.label(:isExternal, "Equipo de usuario (No municipal)") %>
  </div>
  <div class="form-group">
    <%= dev.label :details, "Detalles y aclaraciones" %>
    <%= dev.text_area :details, rows:5,class:"form-control" %>
  </div>

  <div class="actions">
    <%= dev.submit %>
  </div>
<% end %>
