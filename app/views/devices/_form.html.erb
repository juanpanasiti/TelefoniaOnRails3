<div class="modal fade" id="form-device-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Formulario de equipos</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <%= form_with(model: device, url:url, method:method) do |dev| %>

      <div class="modal-body">
        <div class="form-group">
          <%= dev.label :device_model_id, "Modelo" %>
          <%= dev.select :device_model_id, @models_options.map { |option| [option[0],option[1]]  }, {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= dev.label :imei, "IMEI" %>
          <%= dev.text_field :imei, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dev.label :line_id, "LÃ­nea" %>
          <%= dev.select :line_id, @lines_options.map { |val| [val[0],val[1]] }, {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= dev.label :status, "Estado" %>
          <%= dev.select :status, @status_options.map { |val| [val,val]}, {}, {class:"form-control"} %>
        </div>
        <div class="form-group form-check">
          <%= dev.check_box(:isExternal) %>
          <%= dev.label(:isExternal, "Equipo de usuario (No municipal)") %>
        </div>
        <div class="form-group">
          <%= dev.label :details, "Detalles y aclaraciones" %>
          <%= dev.text_area :details, rows:5,class:"form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <%= dev.submit "Guardar", class:"btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>
</div>
