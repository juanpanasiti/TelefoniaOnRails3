<div class="modal fade" id="form-device-model" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Modelo de Equipo Celular</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <%= form_with(model: device_model, url:device_models_path, method:"post") do |dm| %>

      <div class="modal-body">

        <div class="form-group">
          <%= dm.label :mark, "Marca del equipo" %>
          <%= dm.text_field :mark, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :modelName, "Modelo" %>
          <%= dm.text_field :modelName, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :modelCode, "Código de modelo" %>
          <%= dm.text_field :modelCode, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :slotSIM, "Tipo de SIM" %>
          <%= dm.select :slotSIM, options_for_select(@slot_sim_options), {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= dm.label :band, "Banda" %>
          <%= dm.select :band, options_for_select(@band_options), {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= dm.label :osMax, "Sistema Operativo (mayor actualización)" %>
          <%= dm.select :osMax, options_for_select(@os_max_options), {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= dm.label :specsLink, "Link de especificaciones" %>
          <%= dm.url_field :specsLink, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :ramSize, "Memoria RAM" %>
          <%= dm.number_field :ramSize, in:1..32, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :romSize, "Memoria Interna" %>
          <%= dm.number_field :romSize, in:8..1024, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :cpuFreqMax, "CPU (Frec. Máx.)" %>
          <%= dm.number_field :cpuFreqMax, in:1..10, step:0.1, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :cores, "N° de núcleos de CPU" %>
          <%= dm.number_field :cores, in:1..32, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :screenResolution, "Resolución de pantalla" %>
          <%= dm.text_field :screenResolution, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :screenSize, "Tamaño de pantalla" %>
          <%= dm.number_field :screenSize, in:1..10, step:0.1, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :mainCam, "Cámara principal (trasera)" %>
          <%= dm.number_field :mainCam, in:1..150, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :secCam, "Cámara secundaria (frontal/selfie)" %>
          <%= dm.number_field :secCam, in:1..150, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :battery, "Batería" %>
          <%= dm.number_field :battery, in:100..10000, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= dm.label :usbType, "Tipo de USB" %>
          <%= dm.select :usbType, options_for_select(@usb_type_options), {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= dm.label :announced, "Fecha de anuncio/release" %>
          <%= dm.date_field :announced, class:"form-control" %>
        </div>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <%= dm.submit "Guardar", class:"btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>
</div>
