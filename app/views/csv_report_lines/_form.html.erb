<div class="modal fade" id="form-report" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Reporte de líneas</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <%= form_with(model: report, url:reports_path, method:"post") do |r| %>

      <div class="modal-body">

        <div class="form-group">
          <%= r.label :account_id, "Cuenta" %>
          <%= r.select :account_id, options_for_select(@accounts_options), {}, {class:"form-control"} %>
        </div>

        <div class="form-group">
          <%= r.label :date, "Fecha de anuncio/release" %>
          <%= r.date_field :date, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= r.label :report_file, "Archivo del reporte de líneas" %>
          <%= r.file_field :report_file, class:"form-control" %>
        </div>



      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <%= r.submit "Guardar", class:"btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>
</div>
